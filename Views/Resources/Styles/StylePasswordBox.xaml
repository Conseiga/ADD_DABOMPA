<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ADD_DABOMPA.Views">

    <Style x:Key="stl_DefaultPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0,0" />
        <Setter Property="Height" Value="35" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border
                        x:Name="border"
                        Background="White"
                        BorderBrush="#888888"
                        BorderThickness="1"
                        CornerRadius="15">
                        <Grid>
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Margin="16,0"
                                VerticalAlignment="Center" />

                            <TextBlock
                                x:Name="placeholder"
                                Margin="16,0"
                                VerticalAlignment="Center"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="#888888"
                                IsHitTestVisible="False"
                                Text="{TemplateBinding Tag}"
                                Visibility="Collapsed" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--  Nouveau trigger combiné  -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsKeyboardFocused" Value="False" />
                                <Condition Property="local:PasswordBoxHelper.IsPasswordEmpty" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="placeholder" Property="Visibility" Value="Visible" />
                        </MultiTrigger>

                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#4B8DF6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>